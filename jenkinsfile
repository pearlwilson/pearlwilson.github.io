pipeline {
    agent any
    tools {
        nodejs 'nodejs'
        }
    stages {
        stage('cleanup') {
            steps {
                bat 'rmdir /s/q "hello-world-app" '     
            }
        }                
        stage('Install') {
            steps {
                bat 'npx create-react-app hello-world-app'     
            }
        }
        stage('Build') {
            steps {
                bat 'cd hello-world-app && npm run build'    
            }
        }
    }
}
